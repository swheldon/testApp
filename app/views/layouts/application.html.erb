<%= render "layouts/header" %>
<link rel="stylesheet" data-turbolinks-track="reload">
<nav class="navbar navbar-expand-md navbar-default navbar-static-top navbar-dark bg-dark">
      <a class="navbar-brand" href="/">Real Estate Central</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExample03" aria-controls="navbarsExample03" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarsExample03">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
          </li>
          <!-- <li class="nav-item"> 
             <a class="nav-link disabled" href="#"> Disabled</a> 
          </li>
          -->

          <li class="nav-item">
            <a class="nav-link" href="/tenants">Tentants</a>
          </li>

          <li class="nav-item">
            <a class="nav-link" href="/estates">Estates</a>
          </li>

          <li class="nav-item">
            <a class="nav-link" href="/pages/about">About us</a>
          </li>
          
            <% if current_user.try(:admin?)%>
            <li class="nav-item">
              <a class="nav-link" href="/admin">Admin</a>
            </li>
            <% end %>

            <% if user_signed_in? %>
            <li class="nav-item">
              <a class="nav-link" href="/users/sign_out">Log off</a>
            </li>
            <% else %>
            <li class="nav-item">
              <a class="nav-link" href="/users/sign_in">Sign In</a>
            </li>
            <% end %>
        </ul>
        <!-- <form class="form-inline my-2 my-md-0">
          <input class="form-control" placeholder="Search" type="text">
        </form> -->
      </div>
</nav>

<html>
  <head>
    <title>Real Estate Central</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <% unless notice.nil? %>
    <p class="notice"><%= notice %></p>
    <% end %>

    <% unless alert.nil? %>
    <p class="alert"><%= alert %></p>
    <% end %>
    <%= yield %>
  </body>
</html>
