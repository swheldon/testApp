<div class="jumbotron">
<div class="container">
  <h1><strong>All Estates</strong></h1>
</div>
</div>
<div class="container">
    <div class="btn btn-primary">
      <%= link_to 'New Estate', new_estate_path, :class => "btn", :style=>'color:#FFFFFF;'%>
    </div>
      <table id="estates" class="display responsive colreorder select-item" style="width:100%">
        <thead>
          <tr>
            <th>Estate address</th>
            <th>Area</th>
            <th>Bedrooms</th>
            <th>Bathrooms</th>
            <th>Square footage</th>
            <th>Rent</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @estates.each do |estate| %>
          <tr>
            <td><%= estate.estate_address %></td>
            <td><%= estate.area %></td>
            <td><%= estate.bedrooms %></td>
            <td><%= estate.bathrooms %></td>
            <td><%= "#{estate.square_footage} ft" %></td>
            <td><%= number_to_currency estate.rent %></td>
            <td><%= link_to 'Show', estate %></td>
            <td><%= link_to 'Edit', edit_estate_path(estate) %></td>
            <td><%= link_to 'Destroy', estate, 
                    method: :delete, 
                          data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
</div>

