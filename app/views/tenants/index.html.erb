<div class="jumbotron">
<div class="container">
  <h1><strong>All Tenants</strong></h1>
</div>
</div>
<div class="container">
    <div class="btn btn-primary">
      <%= link_to 'New Tenant', new_tenant_path, :class => "btn", :style=>'color:#FFFFFF;'%>
    </div>
      <table id="tenants" class="display responsive colreorder select-item" style="width:100%">
        <thead>
          <tr>
            <th>Last Name</th>
            <th>First Name</th>
            <th>Address</th>
            <th>Phone Number</th>
            <th>Email</th>
            <th>Employment Status</th>
            <th>Tenant Count</th>
            <th>Move In Date</th>
            <th>Term Months</th>
            <th>Furnished</th>
            <th>Lead Source</th>
            <th>Special Requirements</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @tenants.each do |tenant| %>
          <tr>
            <td><%= tenant.last_name %></td>
            <td><%= tenant.first_name %></td>
            <td><%= tenant.address %></td>
            <td><%= tenant.phone_number %></td>
            <td><%= tenant.email %></td>
            <td><%= tenant.employment_status %></td>
            <td><%= tenant.tenant_count %></td>
            <td><%= tenant.move_in_date %></td>
            <td><%= tenant.term_months %></td>
            <td><%= tenant.furnished %></td>
            <td><%= tenant.lead_source %></td>
            <td><%= tenant.special_requirements %></td>
            <td><%= link_to 'Show', tenant %></td>
            <td><%= link_to 'Edit', edit_tenant_path(tenant) %></td>
            <td><%= link_to 'Destroy', tenant, 
                    method: :delete, 
                          data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
</div>
